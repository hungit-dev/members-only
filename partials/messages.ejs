<% if (messages) {%>
    <% messages.forEach(function(message){ %>
        <article class="rounded-4 p-3" style="background-color: #1E1E1E;">
            <h2 class="mb-3 fs-4">
                <%=message.title%>
            </h2>
            <div class="d-flex flex-row gap-3 mb-2">
                <div class="d-flex align-items-center justify-content-center rounded-3 p-2 "
                    style="background-color: #303030; min-width: 100px;  color: #c6fbbb; font-size: 13px;">
                    <%=message.fullName%>
                </div>
                <div class="d-flex align-items-center justify-content-center rounded-3 p-2 "
                    style="background-color: #303030; min-width: 150px;  color: #c6fbbb; font-size: 13px;">
                    <%=message.timestamp%>
                </div>
            </div>
            <p class="mt-3" style="font-size: 16px;">
                <%=message.text%>
            </p>
            <%if(isAdmin){%>
                <div class="d-flex justify-content-end">
                    <a href="/<%=message.id%>/delete">
                        <button type="button" class="btn btn-outline-danger delete-btn"
                            style="background-color: #1E1E1E;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-trash" viewBox="0 0 16 16">
                                <path
                                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z">
                                </path>
                                <path
                                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z">
                                </path>
                            </svg>
                            Delete
                        </button>
                    </a>
                </div>
                <% }%>
        </article>
        <% }) %>
            <%} %>